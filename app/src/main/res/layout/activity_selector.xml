<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectorActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vision for:"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnTextToSpeech"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/heading"
            android:text="TEXT TO SPEECH"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/button_bg"/>

        <Button
            android:id="@+id/btnSpeechToText"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnTextToSpeech"
            android:text="SPEECH TO TEXT"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/button_bg"/>

        <Button
            android:id="@+id/btnObjectDetection"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="OBJECT VISION"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/btnSpeechToText"
            android:textStyle="bold"
            android:background="@drawable/button_bg"/>


    </RelativeLayout>


</RelativeLayout>